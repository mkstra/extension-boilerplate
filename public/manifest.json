{
	"manifest_version": 2,
	"name": "together",
	"author": "Markus",
	"version": "0.0.1",
	"description": "start here",
	"icons": {
		"16": "images/icon-16.png",
		"48": "images/icon-48.png",
		"128": "images/icon-128.png"
	},
	"default_locale": "en",
	"background": {
		"scripts": ["js/background.js"]
	},
	"permissions": [
		"storage",
		"tabs",
		"idle",
		"history",
		"activeTab",
		"bookmarks",
		"https://www.googleapis.com/*",
		"https://www.gstatic.com/",
		"http://*.google.com/"
	],
	"options_ui": {
		"page": "options.html",
		"chrome_style": false
	},
	"chrome_url_overrides" : {
		"newtab": "index.html"
	},
	"content_security_policy": "script-src 'self' https://www.googletagmanager.com https://firebaseinstallations.google https://apis.google.com https://www.gstatic.com/ https://cdn.firebase.com https://*.firebaseio.com https://together-7d90d.firebaseio.com; object-src 'self'; connect-src 'self' wss://*.firebaseio.com;",
	"content_scripts": [
		{
		  "matches": [
			"<all_urls>",
			"http://*/*",
			"https://*/*"
		  ],
		  "js": [
			"js/content.js"
		  ]
		}
	  ],
	"browser_action": {
		"default_icon": {
			"16": "images/icon-16.png",
			"32": "images/icon-32.png",
			"48": "images/icon-48.png"
		},
		"default_title": "together",
		"default_popup": "popup.html"
	},
	"web_accessible_resources": [
		"images/icon-48.png"
	]
}
